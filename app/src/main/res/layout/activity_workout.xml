<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tittlepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:lineSpacingExtra="8dp"
            android:text="Top Exercises"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="8dp"
            android:text="Easy exercises for beginners"
            android:textColor="#000"
            android:textSize="16sp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="384dp"
                android:layout_height="111dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/chest" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="223dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="-7dp"
                    android:text="Chest workout"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="200dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="2-15  minutes" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView2"
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="384dp"
                android:layout_height="111dp">

                <ImageView
                    android:id="@+id/ImageView2"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/legsworkout" />

                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="223dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="-7dp"
                    android:text="Lew Workout"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EditText2"
                    android:layout_width="200dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="10-20 minutes" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView3"
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="384dp"
                android:layout_height="111dp">

                <ImageView
                    android:id="@+id/ImageView3"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/Biceps" />

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="223dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="-7dp"
                    android:text="Biceps Workout"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EditText3"
                    android:layout_width="200dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="10-20 minutes" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CardView4"
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="384dp"
                android:layout_height="111dp">

                <ImageView
                    android:id="@+id/ImageView4"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/shoulder" />

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="223dp"
                    android:layout_height="33dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="-7dp"
                    android:text="Shoulder Workout"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/EditText4"
                    android:layout_width="200dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="10-20 minutes" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>